<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>DAP Web Application</display-name>

	<!-- =================================== === Log4j / Spring =================================== -->

	<!-- Configures log4j through Spring -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.xml</param-value>
	</context-param>

	<!-- disables log file locations relative to the context path, and prevents problems when multiple webapps use the spring log4j config setup -->
	<context-param>
		<param-name>log4jExposeWebAppRoot</param-name>
		<param-value>false</param-value>
	</context-param>


	<!-- ====================================== SPRING =================================== -->

	<!-- Start the Spring listener that loads the application context when the Web app starts up. It assumes the context is named WEB-INF/applicationContext.xml unless 
		you set a context param called contextConfigLocation to override it. -->
	<listener>
		<description>Starts Spring listener to load app context</description>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/ctx-config.xml
			classpath:/ctx-core.xml
			classpath:/ctx-dao.xml
			classpath:/ctx-jobs.xml
			classpath:/ctx-persistence.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>jersey-spring</filter-name>
		<filter-class>com.sun.jersey.spi.spring.container.servlet.SpringServlet</filter-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>org.ocha.dap.rest</param-value>
			<description>package(s) to scan for REST root resource classes</description>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
			<param-value>org.ocha.dap.rest.AuthenticationFilter</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.config.property.JSPTemplatesBasePath</param-name>
			<param-value>/WEB-INF/jsp</param-value>
			<description>Base directory for JSP templates to be included</description>
		</init-param>
	</filter>
</web-app>
