<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
      ">
	<context:annotation-config />

	<bean id="userDAO" class="org.ocha.dap.persistence.dao.UserDAOImpl" />
	<bean id="ckanResourceDAO" class="org.ocha.dap.persistence.dao.CKANResourceDAOImpl" />

	<bean id="dapService" class="org.ocha.dap.service.DAPServiceImpl">
		<constructor-arg name="host" value="${ckan.host}" />
		<constructor-arg name="technicalAPIKey" value="${ckan.technical.api.key}" />
		<constructor-arg name="stagingDirectory">
			<bean class="java.io.File">
				<constructor-arg value="${dap.staging.folder}" />
			</bean>
		</constructor-arg>
	</bean>

</beans>
