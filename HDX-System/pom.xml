  <artifactId>hdx</artifactId>
  <packaging>war</packaging>
  <version>0.2.1</version>
  <name>OCHA HDX webapp</name>


  <properties>
    <timestamp>${maven.build.timestamp}</timestamp>
    <maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
    <hdx.official.version>v0.2.1Beta (Warp Coil) - ${project.version} </hdx.official.version>
    <hdx.build.date>Build date : ${timestamp} </hdx.build.date>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <org.springframework.version>3.2.4.RELEASE</org.springframework.version>
    <org.springframework.security.version>3.1.4.RELEASE</org.springframework.security.version>
    <javax.servlet.api.version>2.5</javax.servlet.api.version>
    <derby.version>10.10.2.0</derby.version>
    <jstl.impl.version>1.2</jstl.impl.version>
    <jersey.version>2.6</jersey.version>
    <aspectj.version>1.7.3</aspectj.version>
    <!-- This value is ok for prod, can be overriden for other environments in profiles -->
    <HDX_ROOT>/opt/www/tomcat/hdx</HDX_ROOT>
    <schema.file>2_schema.ddl</schema.file>
    <schema.dir>resources/db</schema.dir>
  </properties>

  <build>
    <finalName>hdx</finalName>
    <resources>
      <resource>
        <directory>${project.basedir}/src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <webResources>
            <resource>
              <filtering>true</filtering>
              <directory>src/main/webapp</directory>
              <includes>
                <include>**/web.xml</include>
                <include>**/admin-menu.jsp</include>
              </includes>
            </resource>
          </webResources>
          <warSourceDirectory>src/main/webapp</warSourceDirectory>
          <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <formats>
            <format>xml</format>
            <format>html</format>
          </formats>
        </configuration>
      </plugin>
    </plugins>
  </build>

