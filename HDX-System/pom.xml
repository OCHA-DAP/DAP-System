  <profiles>
    <profile>
      <id>prod</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
    </profile>
    <profile>
      <id>ddl</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>hibernate3-maven-plugin</artifactId>
            <version>2.2</version>
            <executions>
              <execution>
                <phase>process-classes</phase>
                <goals>
                  <goal>hbm2ddl</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <components>
                <component>
                  <name>hbm2ddl</name>
                  <outputDirectory>${schema.dir}</outputDirectory>
                  <implementation>jpaconfiguration</implementation>
                </component>
              </components>
              <componentProperties>
                <persistenceunit>hdx</persistenceunit>
                <outputfilename>${schema.file}</outputfilename>
                <drop>true</drop>
                <create>true</create>
                <export>false</export>
                <format>true</format>
              </componentProperties>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>dbunit-db</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>properties-maven-plugin</artifactId>
            <version>1.0-alpha-2</version>
            <executions>
              <execution>
                <phase>initialize</phase>
                <goals>
                  <goal>read-project-properties</goal>
                </goals>
                <configuration>
                  <files>
                    <file>${HDX_ROOT}/config/hdx-config</file>
                  </files>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>dbunit-maven-plugin</artifactId>
            <version>1.0-beta-3</version>

            <executions>
              <execution>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>export</goal>
                </goals>
              </execution>
            </executions>

            <!--jar file that has the jdbc driver -->
            <dependencies>
              <dependency>
                <groupId>postgresql</groupId>
                <artifactId>postgresql</artifactId>
                <version>9.1-901.jdbc4</version>
              </dependency>
            </dependencies>

            <!-- common configurations -->
            <configuration>
              <driver>org.postgresql.Driver</driver>
              <url>${db.url}</url>
              <username>${db.username}</username>
              <password>${db.password}</password>
              <format>flat</format>
              <dest>${project.basedir}/src/test/resources/samples/scraper/bootstrap_data.xml</dest>
              <tables>
                <list>
                  <name>language</name>
                </list>
                <list>
                  <name>text</name>
                </list>
                <list>
                  <name>hdx_translation</name>
                </list>
                <list>
                  <name>organisation</name>
                </list>
                <list>
                  <name>source</name>
                </list>
                <list>
                  <name>source_dictionary</name>
                </list>
                <list>
                  <name>hdx_unit</name>
                </list>
                <list>
                  <name>indicator_type</name>
                </list>
                <list>
                  <name>indicator_type_dictionary</name>
                </list>
                <list>
                  <name>entity_type</name>
                </list>
                <list>
                  <name>entity</name>
                </list>
                <list>
                  <name>resource_configuration</name>
                </list>
                <list>
                  <name>resource_config_entry</name>
                </list>
                <list>
                  <name>indicator_resource_config_entry</name>
                </list>

              </tables>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
